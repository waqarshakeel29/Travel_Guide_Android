<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="2dp"
        android:elevation="@dimen/rv_Item_Elevation"
        android:shadowColor="#cccccc"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    <LinearLayout
            android:gravity="center"
            android:layout_margin="@dimen/rv_Item_Margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="@dimen/rv_Item_Padding">

        <ImageView
                android:layout_width="@dimen/rv_Item_Image_Width"
                android:layout_height="@dimen/rv_Item_Image_Height"
                android:layout_gravity="center"
                android:id="@+id/mmImageView"/>

        <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/rv_Item_Text_Size"
                android:id="@+id/mmTextView"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>